# Include all functionality (inc. debug)
CFLAGS_stereo_debug := -DDEBUG_PRINT_ENABLED -DENABLE_STEREO -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT -DINCLUDE_USB -DINCLUDE_WIRED
CFLAGS_stereo_tws_debug := -DDEBUG_PRINT_ENABLED -DTWS_DEBUG -DENABLE_STEREO -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT -DINCLUDE_USB -DINCLUDE_WIRED

# All functionality included in one 'multi_decoder' kap file
CFLAGS_one_kap := -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT -DINCLUDE_USB -DUSE_MULTI_DECODER -DINCLUDE_WIRED

# All functionality included in one 'multi_decoder' kap file and debug
CFLAGS_one_kap_debug := -DDEBUG_PRINT_ENABLED -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT -DINCLUDE_USB -DUSE_MULTI_DECODER -DINCLUDE_WIRED

# All functionality included in one 'multi_decoder' kap file
CFLAGS_one_kap_stereo := -DENABLE_STEREO -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT -DINCLUDE_USB -DUSE_MULTI_DECODER -DINCLUDE_WIRED

# All functionality included in one 'multi_decoder' kap file and debug
CFLAGS_one_kap_stereo_debug := -DDEBUG_PRINT_ENABLED -DENABLE_STEREO -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT -DINCLUDE_USB -DUSE_MULTI_DECODER -DINCLUDE_WIRED

# non debug version of aptx LL using sbc back channel
CFLAGS_stereo_bidir := -DCVC_BACK_CHANNEL -DENABLE_STEREO -DINCLUDE_MP3 -DINCLUDE_AAC -DINCLUDE_FASTSTREAM -DINCLUDE_APTX -DINCLUDE_APTX_ACL_SPRINT  -DINCLUDE_USB -DINCLUDE_WIRED

