
VARIANTS :=  all all_removable_mic

# Include DEBUG
CFLAGS_debug := -DDEBUG_PRINT_ENABLED

# Include all CVC variants and stereo mode
CFLAGS_all := -DCVC_ALL

# Include all variants with debug
CFLAGS_all_debug := -DCVC_ALL -DDEBUG_PRINT_ENABLED

# Include all variants and multi kap support
CFLAGS_multi_all := -DCVC_MULTI_KAP -DCVC_ALL

# Include all variants and multi kap support, with debug
CFLAGS_multi_all_debug := -DCVC_MULTI_KAP -DCVC_ALL -DDEBUG_PRINT_ENABLED

# Include all variants and single kap support
CFLAGS_single_all := -DCVC_SINGLE_KAP -DCVC_ALL

# Include all variants and single kap support, with debug
CFLAGS_single_all_debug := -DCVC_SINGLE_KAP -DCVC_ALL -DDEBUG_PRINT_ENABLED

# include all variants and changes required for removable support
CFLAGS_all_removable_mic := -DCVC_ALL -DREMOVABLE_MIC
